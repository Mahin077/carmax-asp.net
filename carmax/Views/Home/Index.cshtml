@model IEnumerable<carmax.Models.product>
@{
    ViewBag.Title = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/Content/Homepage.css">
</head>
<body>
    <!-- Banner Section -->
    <section class="home" id="home">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/one.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/two.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/three.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    </section>

    <!-- Icon Section -->

    <section class="Icon" style="margin-top:50px">
        <div class="container">

            <div class="row card-group">

                <div class="col-lg-4 col-md-6  mb-5 ">
                    <form>
                        <div class="icon_box one">
                            <div class="icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <h4 class="Title" style="color: tomato;">6+ branches</h4>
                            <p class="discription">We have 6+ branches all over the world. All the branches contain huge collection of cars. We are always working to make our company better.</p>
                        </div>

                    </form>
                </div>
                <div class="col-lg-4 col-md-6  mb-5 ">
                    <form>
                        <div class="icon_box one">
                            <div class="icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <h4 class="Title" style="color: tomato;">320+ happy clients</h4>
                            <p class="discription">We have 320+ clients from all over the world. They are quite satisfied with our work. We are always working to make our company better.</p>
                        </div>

                    </form>
                </div>
                <div class="col-lg-4 col-md-6  mb-5 ">
                    <form>
                        <div class="icon_box one">
                            <div class="icon">
                                <i class="fas fa-car"></i>
                            </div>
                            <h4 class="Title" style="color: tomato;">1500+ news cars</h4>
                            <p class="discription">We have 1500+ cars in our collection. We are always offering new collections. We are always working to make our company better.</p>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </section>

    <!-- Car model Section -->
    <section class="container ">

        <div class="title  d-flex justify-content-center" id="card">
            <h3 style="top: 20px;margin-top: 50px; color: #149279;font-weight:bold">ALL CAR MODELS</h3>
        </div>


        <div style="margin-top:100px ;" class="row cars">
            @foreach (var item in Model)
            {
                <div class="col col-lg-4 col-md-6 col-sm-12 mb-5 ">

                    <form action="#" method="GET">

                        <div class="card " style="width:325px;">
                            <img src="@Url.Content(item.img)" class="card-img-top" alt="..." height="200px">
                            <div class="card-body mt-5">
                                <h5 class="card-title">@item.name</h5>
                                <p class="card-text" style="font-weight: bold;">
                                    Price : &#2547; @item.price

                                </p>
                                <button type="submit" class="btnn2" name="enter">Details</button>
                                <input type="hidden" name="_id" value="@item.id">
                                <input type="hidden" name="_tbl" value="@item.type">
                            </div>
                        </div>


                    </form>

                </div>


            }
        </div>

        <div class="container mt-5" style="padding-top: 10px;">
            <a style="padding-top: 10px;margin-bottom:50px" href="#" class="btnn3">See All Vehicles</a>
        </div>
    </section>

    <!-- Service Section -->
    <section class="services">
        <div class="container">
            <div class="heading mt-5">
                <h2>Our Services</h2>
            </div>

            <div class="row">

                <div class="col-lg-4 col-md-6 d-flex align-item-center mb-5 mt-5">

                    <form>
                        <div class="icon_box one">
                            <div class="icon">
                                <i class="fas fa-car"></i>
                            </div>
                            <h4 class="Title" style="color: tomato;">car selling</h4>
                            <p class="discription">We are selling the best cars from all over the world. We have a huge collections of old & new models. We are always working to make our company better.</p>
                        </div>

                    </form>

                </div>
                <div class="col-lg-4 col-md-6 d-flex align-item-center mb-5 mt-5">

                    <form>
                        <div class="icon_box one">
                            <div class="icon">
                                <i class="fas fa-car-crash"></i>
                            </div>
                            <h4 class="Title" style="color: tomato;">car insurance</h4>
                            <p class="discription">We also give car insurance. So no more worries about car damage by an accient or car being stolen.  We are always working to make our company better.</p>
                        </div>

                    </form>

                </div>
                <div class="col-lg-4 col-md-6 d-flex align-item-center mb-5 mt-5">

                    <form>
                        <div class="icon_box one">
                            <div class="icon">
                                <i class="fas fa-headset"></i>
                            </div>
                            <h4 class="Title" style="color: tomato;">24/7 support</h4>
                            <p class="discription">We have 24/7 support to give the best service to all. Anytime we are available to help you in any case.  We are always working to make our company better.</p>
                        </div>

                    </form>

                </div>




            </div>
        </div>
    </section>

</body>